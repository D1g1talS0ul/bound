%h1 Users
%ul
  - for user in @users
    %li
      = user.description
      (
      = link_to "Revoke", user, :method => :delete, :data => {:confirm => "Are you sure you wish to revoke this user's access?"}
      - if user.pending?
        or
        = link_to "copy join URL", join_path(user.invite_token)
      )
%ul
  %li= link_to "Add new user", new_user_path
  %li= link_to "Back to zone list", root_path
