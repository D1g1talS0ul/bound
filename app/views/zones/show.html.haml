- @page_title = @zone.name
.page__header
  = @zone.name
  .page__headerButton
    = link_to "Add new record", new_zone_record_path(@zone), :class => 'button'
    = link_to "Edit zone", edit_zone_path(@zone), :class => 'button'
.page__content
  %table.recordTable
    %thead
      %tr
        %td{:width => "25%"} Name
        %td{:width => "10%"} TTL
        %td{:width => "12%"} Type
        %td{:width => "53%"} Data
    %tbody
      - if @records.empty?
        %tr
          %td.recordTable__empty{:colspan => 4} There are no records for this zone yet.
      - else
        - for record in @records
          %tr
            %td= link_to record.name || "@", edit_zone_record_path(@zone, record), :class => "u-link"
            %td= record.ttl
            %td= record.type.type
            %td= record.data

